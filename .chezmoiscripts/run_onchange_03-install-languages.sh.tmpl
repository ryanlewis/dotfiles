#!/bin/bash
# Install programming language runtimes via asdf - runs when versions change
# Version hash: {{ include "dot_tool-versions.tmpl" | sha256sum }}
set -e

# Skip if quick install mode
if [[ "${QUICK_INSTALL:-}" == "true" ]]; then
    echo "â­ï¸  Skipping language runtime installation (quick mode)"
    exit 0
fi

# Skip in CI mode to save time
if [[ "${CI:-}" == "true" ]]; then
    echo "â­ï¸  Skipping language runtime installation (CI mode)"
    exit 0
fi

# Ensure asdf is available
if [[ ! -f "$HOME/.asdf/asdf.sh" ]]; then
    echo "âš ï¸  asdf not found, skipping language installation"
    exit 0
fi

# Source asdf
export ASDF_DIR="$HOME/.asdf"
. "$HOME/.asdf/asdf.sh"

echo "ğŸš€ Setting up programming language runtimes..."

# Add asdf plugins if not already added
add_plugin() {
    local plugin=$1
    if ! asdf plugin list | grep -q "^${plugin}$"; then
        echo "ğŸ“¦ Adding ${plugin} plugin..."
        asdf plugin add "${plugin}"
    fi
}

# Install Node.js
add_plugin nodejs
echo "ğŸ“¦ Installing Node.js..."
if [[ -f "$HOME/.tool-versions" ]]; then
    NODE_VERSION=$(grep "^nodejs " "$HOME/.tool-versions" | awk '{print $2}')
    if [[ -n "$NODE_VERSION" ]]; then
        asdf install nodejs "${NODE_VERSION}" || echo "âš ï¸  Node.js installation failed, continuing..."
        asdf global nodejs "${NODE_VERSION}"
    fi
fi

# Install Python (via Miniconda)
add_plugin python
echo "ğŸ“¦ Installing Python..."
if [[ -f "$HOME/.tool-versions" ]]; then
    PYTHON_VERSION=$(grep "^python " "$HOME/.tool-versions" | awk '{print $2}')
    if [[ -n "$PYTHON_VERSION" ]]; then
        # Note: Python installation may fail due to Conda ToS - that's OK
        asdf install python "${PYTHON_VERSION}" 2>/dev/null || echo "âš ï¸  Python installation failed (likely Conda ToS issue), continuing..."
        asdf global python "${PYTHON_VERSION}" 2>/dev/null || true
    fi
fi

# Install Go
add_plugin golang
echo "ğŸ“¦ Installing Go..."
if [[ -f "$HOME/.tool-versions" ]]; then
    GO_VERSION=$(grep "^golang " "$HOME/.tool-versions" | awk '{print $2}')
    if [[ -n "$GO_VERSION" ]]; then
        asdf install golang "${GO_VERSION}" || echo "âš ï¸  Go installation failed, continuing..."
        asdf global golang "${GO_VERSION}"
    fi
fi

# Reshim to ensure all binaries are available
asdf reshim

# Verify installations
echo ""
echo "âœ… Verifying language runtimes:"
command -v node >/dev/null 2>&1 && echo "  âœ“ Node.js: $(node --version)" || echo "  âš ï¸  Node.js not available"
command -v python3 >/dev/null 2>&1 && echo "  âœ“ Python: $(python3 --version 2>&1)" || echo "  âš ï¸  Python not available"
command -v go >/dev/null 2>&1 && echo "  âœ“ Go: $(go version)" || echo "  âš ï¸  Go not available"

echo ""
echo "âœ“ Language runtime setup complete"